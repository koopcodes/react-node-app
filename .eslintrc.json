{
	"env": {
		"es6": true,
		"browser": true,
		"node": true,
		"jasmine": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": ["react"],
	"rules": {
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"comma-dangle": [
			"error",
			{
				"arrays": "always",
				"objects": "never",
				"imports": "always",
				"exports": "always",
				"functions": "never"
			}
		]
	}
}
